weight = 4.8 

#Ground shipping
if weight <=2:
  cost = weight* 1.5 + 20
  print(cost)
elif weight > 2 and weight <=6:
  cost = weight * 3.0 + 20
  print(cost)
elif weight > 6 and weight <= 10:
  cost = weight * 4.0 + 20
  print(cost)
elif weight > 10:
  cost = weight * 4.75 + 20
  print(cost)

ground_premium_shipping = 125.00
print(ground_premium_shipping)

#Drone shipping
if weight <=2:
  cost = weight* 4.5
  print(cost)
elif weight > 2 and weight <=6:
  cost = weight * 9.0
  print(cost)
elif weight > 6 and weight <= 10:
  cost = weight * 12.0
  print(cost)
elif weight > 10:
  cost = weight * 14.25
  print(cost)
